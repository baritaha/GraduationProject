@model Project_Test.Models.Role.EditRoleViewModel

@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>

<h4>EditRoleViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleID" class="control-label"></label>
                <input readonly asp-for="RoleID" class="form-control" />
                <span asp-validation-for="RoleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (Model.UsersNames.Any())
{
    <div class="card">
        <div class="card-header">Users in this list</div>
        <div class="card-body">
            @foreach (var user in Model.UsersNames)
            {
                <h3>@user</h3>
            }
        </div>
        <div class="card-footer">
            <a asp-action="AddRemoveUserRole" asp-controller="Account" asp-route-id="@Model.RoleID"
               class="btn btn-primary">Add or Remove user</a>
        </div>
    </div>

}
else
{
    <div class="alert alert-warning">No Users In This List</div>
    <br />
    <a asp-action="AddRemoveUserRole" asp-controller="Account" asp-route-id="@Model.RoleID"
       class="btn btn-primary">Add or Remove user</a>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

