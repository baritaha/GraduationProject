@model List<Donation_Box>

@{
    ViewData["Title"] = "View_Donations";
}
<style>
    .thead-red{
        background-color:pink;
    }
</style>
<h2>My Donations</h2>

<p>
    History of Donations
</p>

<table class="table table-striped table-hover">
    <thead class="thead-red">
        <tr>
            <th>Donor Location</th>
            <th>Donor Email</th>
            <th>Patient Name</th>
            <th>Patient Age</th>
            <th>Patient Gender</th>
            <th>Patient Blood Type</th>
            <th>Patient Hospital</th>
            <th>Patient Nationality Number</th>
            <th>Diseases</th>
            <th>Donation Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Donor_Location)</td>
                <td>@Html.DisplayFor(modelItem => item.Donor_Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Patient_Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Patient_Age)</td>
                <td>@Html.DisplayFor(modelItem => item.Patient_Gender)</td>
                <td>@Html.DisplayFor(modelItem => item.Patient_BloodType)</td>
                <td>@Html.DisplayFor(modelItem => item.Patient_Hospital)</td>
                <td>@Html.DisplayFor(modelItem => item.Patient_NationalityNum)</td>
                <td>@Html.DisplayFor(modelItem => item.Diseases)</td>
                <td>@Html.DisplayFor(modelItem => item.Donation_Status)</td>
            </tr>
        }
    </tbody>
</table>
