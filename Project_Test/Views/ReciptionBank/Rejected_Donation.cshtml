@model List<Donation_Box>

@{
    ViewData["Title"] = "Rejected_Donation";
    Layout = "~/Views/Shared/Bank_Layout.cshtml";
}

<h2>Rejected_Donation</h2>


@if (Model.Where(d => d.Donation_Status == Donation_Box.Status.Rejected).Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Donor Email
                </th>
                <th>
                    Donor BloodType
                </th>
                <th>
                    Patient Name
                </th>
                <th>
                    Patient Age
                </th>
                <th>
                    Patient Gender
                </th>
                <th>
                    Patient BloodType
                </th>
                <th>
                    Patient Hospital
                </th>
                <th>
                    Patient NationalityNum
                </th>
                <th>
                    Diseases
                </th>
                <th>
                    Donation Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Where(d => d.Donation_Status == Donation_Box.Status.Rejected))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Donor_Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Donor_BloodType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient_Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient_Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient_BloodType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient_Hospital)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient_NationalityNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Diseases)
                    </td>
                    <td class="text-danger">
                        @Html.DisplayFor(modelItem => item.Donation_Status)
                    </td>
                    <td>
                        <a asp-action="Rejected_Donation_Details" asp-controller="ReciptionBank" asp-route-id="@item.DonationID" class="btn btn-link">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
            else
            {
                <h1>There Is No Rejected Donations </h1>
            }

