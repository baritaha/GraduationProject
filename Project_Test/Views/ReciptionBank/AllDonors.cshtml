@model List<Donor>

@{
    ViewData["Title"] = "AllDonors";
    Layout = "~/Views/Shared/Bank_Layout.cshtml";
}
<style>
    .d{
        text-align:center;
        color:cornflowerblue;
    }
</style>

<h2 class="d">
    <i class="fas fa-users"></i>
    All Donors
</h2>

<p>
    <a asp-action="Create" class="btn btn-info">
       
        Create New
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Email
            </th>
            <th>
                Age
            </th>
            <th>
                Gender
            </th>
            <th>
                BloodType
            </th>
            <th>
                Address
            </th>
            <th>
                NationalityNum
            </th>
            <th>
                PhoneNumber
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NationalityNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
           
        </tr>
}
    </tbody>
</table>
