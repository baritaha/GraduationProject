<p>
    <a asp-action="Add" asp-controller="ReciptionBank" class="btn btn-danger">Add New Blood Unit</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Type
            </th>
            <th>
                Code
            </th>
            <th>
                Start Date
            </th>
            <th>
                Expire Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Expire_Date)
                </td>
                <td>
                    <a class="b1" asp-action="EditBloodUnit" asp-controller="ReciptionBank" asp-route-id="@item.BloodID">
                        Edit
                    </a> |
                    <form method="post" asp-action="DeleteBloodUnit" asp-controller="ReciptionBank" asp-route-id="@item.BloodID">
                        <button class="b2">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>