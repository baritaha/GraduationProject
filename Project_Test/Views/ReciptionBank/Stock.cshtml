@model List<Blood>

@{
    ViewData["Title"] = "Stock";
    Layout = "~/Views/Shared/Bank_Layout.cshtml";
}
<head>
    <title>blood store</title>
    <link rel="stylesheet" type="text/css" href="~/Admin-Dashboard/css/styleUnit.css">
    <style>
        .title{
            text-align:center;
            color:cornflowerblue;
        }
    </style>
</head>

<h2 class="title">
    <i class="fas fa-flask"></i>
    blood store
</h2>
<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="blood-vial">
            <span class="blood-type">A</span>
            <div class="blood-content">
                <div class="blood-count">
                    <div class="huge" id="unitCount">@Model.Where(d => d.Type == "A").Count()</div>
                    <div id="unitText">Unit</div>
                </div>
                <div class="blood-fluid"></div>
                <div class="blood-footer">

                    <span class="blood-hover-text">Type Of<strong> A</strong></span>
                </div>
            </div>
        </div>
    </div>
